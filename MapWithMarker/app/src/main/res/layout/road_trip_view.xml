<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roadTripViewLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="16dp"
    android:background="@drawable/step_view"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp">

    <!-- Name TextView -->
    <TextView
        android:id="@+id/text_step_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:text="Tittle"
        android:textColor="#05254B"
        android:textSize="20sp" />

    <!-- Separator -->
    <View
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="3dp"
        android:background="#05254B"/>

    <!-- Remove Button -->

    <TextView
        android:id="@+id/roadTripStepCounterTextView"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:text="Step nb : 0"
        android:textColor="#7CB8FF"
        android:textSize="20sp" />
</LinearLayout>