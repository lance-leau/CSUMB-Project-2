<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_background"
    tools:context=".Landing">


    <!-- Plus Button -->


    <!-- Sign Out Button -->

    <!-- >Admin Button -->

    <!-- >Settings Button -->

    <!-- >Settings Logo Button -->

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="19dp"
        android:layout_below="@id/LogoSettings"
        android:layout_alignParentEnd="true"
        android:background="@drawable/logout_logo"
        android:textColor="@android:color/white" />
    
    <View
        android:id="@+id/dropDownMenue_view"
        android:layout_width="70dp"
        android:layout_height="190dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:background="#5BFFFFFF"/>

    <Button
        android:id="@+id/admin_button"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <Button
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/signOutButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/logosettings"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/LogoSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/hamburger_logo"
        android:gravity="center" />

    <TextView
        android:id="@+id/projectsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:letterSpacing="0.045"
        android:text="@string/projects"
        android:textColor="#AEFFFFFF"
        android:textSize="45sp"
        android:textStyle="bold" />
    <!--        android:layout_below="@id/topBackground"-->


    <GridLayout
        android:id="@+id/roadTrip_list_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:columnCount="3"
        android:rowCount="4"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/plusButton"
            android:layout_width="80dp"
            android:layout_height="107dp"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/road_trip_view_background"
            android:fontFamily="@font/poppins_light"
            android:text="+"
            android:textColor="#000000"
            android:textSize="80dp" />

    </GridLayout>

    <!-- Add your content below this line -->

</RelativeLayout>